{
  "compilerOptions": {
    "noImplicitAny": false,
    "strictNullChecks": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "allowJs": true,
    "types": ["vite/client"],
    "typeRoots": ["./node_modules/@types/", "./types"],
    "removeComments": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["types/*"],
      "@config/*": ["config/*"],
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@router/*": ["src/router/*"],
      "@store/*": ["src/store/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@views/*": ["src/views/*"],
      "@locales/*": ["src/locales/*"],
      "@directives/*": ["src/directives/*"],
      "@enums/*": ["src/enums/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
